@model List<eBoxOffice.Domain.Domain_models.Order>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<h1>Orders</h1>

<table class="table">

    <thead>
    <th class="col-md-1">#</th>
    <th class="col-md-1">Customer Detqails</th>
    <th class="col">Nuber of products</th>
    <th class="col"></th>
    <th class="col"></th>
    </thead>

    <tbody>
        @{
            var i = 1;
            foreach (var item in Model)
            {
                <tr>
                    <td>@(i++)</td>
                    <td>@item.OrderedBy.Email</td>
                    <td>@item.TicketsInOrder.Count</td>
                    <td>
                        <a class="btn btn-outline-dark" href="/Orders/GetOrderDetails/@item.Id">Details</a>
                    </td>
                    <td>
                        <a class="btn btn-outline-dark" href="/Orders/SavePdf/@item.Id">Create Invoice</a>
                    </td>
                </tr>
            }
        }
    </tbody>

</table>