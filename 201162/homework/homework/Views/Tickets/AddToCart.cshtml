@{
}

<h1>Add selected ticket to shopping cart</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="AddToShoppingCart">
            <div class="form-group">
                <input type="hidden" class="form-control" asp-for="SelectedTicket.Id" />
            </div>

            <div class="form-group">
                <label asp-for="SelectedTicket.Movie.MovieName">Movie</label>
                <input disabled class="form-control" asp-for="SelectedTicket.Movie.MovieName" />
            </div>

            <div class="form-group">
                <label asp-for="SelectedTicket.Movie.Category">Category</label>
                <input disabled class="form-control" asp-for="SelectedTicket.Movie.Category" />
            </div>

            <div class="form-group">
                <label asp-for="SelectedTicket.DateTime">Date and Time</label>
                <input disabled class="form-control" asp-for="SelectedTicket.DateTime" />
            </div>

            <div class="form-group">
                <label asp-for="SelectedTicket.TicketPrice">Price</label>
                <input disabled class="form-control" asp-for="SelectedTicket.TicketPrice" />
            </div>

            <div class="form-group">
                <label asp-for="Quantity">Quantity</label>
                <input type="number" class="form-control" asp-for="Quantity" />
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-outline-success">Save</button>
            </div>

        </form>
    </div>
</div>

